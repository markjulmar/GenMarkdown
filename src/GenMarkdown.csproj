<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <RootNamespace>Julmar.GenMarkdown</RootNamespace>
	<PackOnBuild>true</PackOnBuild>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
	<PackageVersion>1.0.6.2-preview</PackageVersion>
    <PackageId>Julmar.GenMarBkdown</PackageId>
    <Authors>Mark Smith</Authors>
    <Company>julmar.com</Company>
	<Owners>julmar.com</Owners>
    <Description>A .NET library to create Markdown documents.</Description>
    <Copyright>(C) 2021-2023 julmar.com</Copyright>
    <PackageProjectUrl>https://github.com/markjulmar/GenMarkdown</PackageProjectUrl>
	<Summary>.NET Core library to create Markdown documents</Summary>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/markjulmar/GenMarkdown</RepositoryUrl>
    <PackageTags>.net dotnet markdown</PackageTags>
	<PackageLicenseExpression>MIT</PackageLicenseExpression>
	<SynchReleaseVersion>false</SynchReleaseVersion>
  </PropertyGroup>
	
  <PropertyGroup>
	<IncludeSymbols>true</IncludeSymbols>
	<SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

	<ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
